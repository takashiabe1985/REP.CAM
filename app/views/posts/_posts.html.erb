<ul class="list-unstyled">
  <% posts.each do |post| %>
    <li class="media mb-3">
      <div class="media-body">
        <div>
          <%= link_to post.id, post %> : <span class="text-muted">posted at <%= post.created_at %></span>
        </div>
        <div>
          <p><%= post.title %></p>
        </div>
      </div>
    </li>
  <% end %>
  <%= paginate posts %>
</ul>